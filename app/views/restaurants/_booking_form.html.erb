        </select>
      </div>

      <div class= "form-row">
        <input type="text" placeholder="Full Name">
        <input type="text" placeholder="Phone Number">
      </div>
      <div class= "form-row">
        <input type="number" placeholder="How Many Persons?" min="1" max="25">
        <input type="submit" placeholder="BOOK TABLE">
      </div>
    </form>
  </div>
</div>
