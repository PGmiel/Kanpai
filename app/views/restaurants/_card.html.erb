<div class="card position-relative">

  <div class="picture">
    <img src="https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1349&q=80" alt="bar">
  </div>


  <div class="column">
    <div class="summary">
      <ul class="list-inline">
        <li>Name: <%= link_to restaurant.name, restaurant_path(restaurant) %></li>
        <li>Address: <%= restaurant.address %></li>
<!--         <li>Owner: <%#= restaurant.user.full_name %></li> -->
        <li>
<!--           <%# x = 0%>
          <%# restaurant.tables.each do |table|%>
            <%#if table.status != "booked"%>
              <%# x += 1%>
            <%#end%>
          <%#end%> -->
          <%="#{restaurant.number_of_tables_available} tables available"%>
        </li>

         <%="#{restaurant.average_rating}/5"%>
       <!--  To buy:
        <li><%# restaurant.menu_items.each do |item| %></li>
          <ul>
            <li><%#= item.item_name %> - <%#= item.price %> â‚¬ - <%#= item.category %></li>
          </ul>
        <%# end %> -->
      </ul>
    </div>
    <!-- Button trigger modal -->
    <div class="booking-button">
      <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#exampleModal">
        book a table here
      </button>
      <div class="container">
      <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Book a table</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <%= simple_form_for [restaurant, @booking] do |f| %>
                  <%= f.input :starts_at, as: :string, required: true, input_html: {class: "datepicker"} %>
                  <%= f.input :ends_at, as: :string, required: true, input_html: {class: "datepicker"} %>
                  <%= f.input :number_of_customers,as: :select, collection: [1, 2, 3, 4, 5] %>
                  <%= f.submit "Submit booking", class: "btn btn-warning" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%if current_user %>
    <div class="favorite m-4 position-absolute ">
      <%= link_to restaurant_favoritize_path(restaurant), method: :post do %>
      <% if current_user.favorited?(restaurant) %>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
      </svg>
      <% else %>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
        <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
      </svg>
      <% end %>
      <% end %>
    </div>
  <%end%>
</div>
