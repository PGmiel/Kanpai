<!-- <div class="content mt-5"> -->
<div class="row">
    <!-- Map -->
    <div class="map sticky-top col-lg-6 col-md-12 col-12-sm">
        <div id="map"
             style="width: 100%; height: 90vh;"
             data-markers="<%= @markers.to_json %>"
             data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
    </div>


    <!-- Filter -->
    <div class="restaurant-cards pr-5 pl-0 col-lg-6 col-md-12 col-12-sm">
      <div class="form-container">
          <%= form_tag restaurants_path, method: :get, class: "index-resto-form " do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Search here!"
          %>
          <%= submit_tag "Submit", class: "btn btn-warning" %>
        <% end %>
      </div>
      <!-- List of restaurants -->
        <% @restaurants.each do |restaurant| %>
          <%= render "card", restaurant: restaurant %>
        <% end %>
    </div>
</div>
