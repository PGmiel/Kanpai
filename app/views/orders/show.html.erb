          <% @beers.each do |beer|%>
            <li class="d-flex justify-content-between">
              <p><%= beer.item_name %></p>
              <div class="form">
                <%= simple_form_for [@order, @order_item] do |f| %>
                  <%= f.input :quantity, label: false, input_html: { min: 0, max: 10 }%>
                  <%= f.input :menu_item_id, as: :hidden, input_html: {value: beer.id} %>
                  <%= f.button :submit, "add", class: 'btn btn-light'%>
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      <% end %>

      <% if @wines.present? %>
      <h4>Wines</h4>
        <ul>
          <% @wines.each do |wine|%>
            <li class="d-flex justify-content-between">
              <p><%= wine.item_name %></p>
              <div class="form">
                <%= simple_form_for [@order, @order_item] do |f| %>
                  <%= f.input :quantity, label: false, input_html: { min: 0, max: 10 }%>
                  <%= f.input :menu_item_id, as: :hidden, input_html: {value: wine.id} %>
                  <%= f.button :submit, "add", class: 'btn btn-light'%>
                <% end %>
              </div>
