<div class="container drinks my-5">
    <h2 class="text-center d-flex justify-content-center align-items-center" style="background-color: white; height: 60px">Drinks</h2>
    <div class="menu-item-infos mx-3 mt-4">
      <% if @hot_drinks.present? %>
        <h4>Hot Drinks</h4>
        <ul>
          <% @hot_drinks.each do |hot_drink|%>
            <li class="d-flex justify-content-between">
              <p><%= hot_drink.item_name%></p>
              <div class="form">
                <%= simple_form_for [@order, @order_item] do |f| %>
                  <%= f.input :quantity, label: false, input_html: { min: 0, max: 10 }%>
                  <%= f.input :menu_item_id, as: :hidden, input_html: {value: hot_drink.id} %>
                  <%= f.button :submit, "add", class: 'btn btn-light'%>
                <% end %>
              </div>
              <%#= render 'orders/minus_plus_button' %>
            </li>
          <% end %>
        </ul>
      <% end %>

      <% if @beers.present? %>
        <h4>Beers</h4>
